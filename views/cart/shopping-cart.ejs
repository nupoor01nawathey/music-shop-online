<% include ../partials/header %>
    <div class="container">    
        <h3>Below songs are ready for Checkout</h3>
    </div>

    <% if (songs) { %>
        <div class="row">
            <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
                <ul class="list-group">
                    <% for (var i=0; i < songs.length; i++) { %>
                        <li class="list-group-item">
                             <strong><%= songs[i].item.trackName %></strong>
                            <span class="label label-success">$<%= songs[i].item.trackPrice %></span>
                            <div class="btn-group">
                                <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">Action <span class="caret"></span></button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="/reduce/_id">Reduce by 1</a></li>
                                    <li><a class="dropdown-item" href="/remove/_id">Remove All</a></li>
                                </ul>
                            </div>
                       </li>
                    <% } %>          
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
                <strong>Total: $<%= session.cart.totalPrice %></strong>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
                <a href="/checkout" type="button" class="btn btn-success">Checkout</a>
            </div>
        </div>
        <% } %>
        <div class="row">
            <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
                <h2>No Items in Cart</h2>
            </div>
        </div>

    <% include ../partials/footer %>
