<% include ../partials/header %>

    <div class="container">
        <h3>User SignIn :</h3>
        <div class="col-md-6 col-md-offset-3">
            <div class="row">
                <div class="col-lg-12">
                    <form method="post" action="/user/signin">   
                        <div class="form-group">
                            <input type="username" name="username" id="username" tabindex="1" class="form-control" placeholder="Username">
                        </div>
                        <div class="form-group">
                            <input type="password" name="password" id="password" class="form-control" placeholder="Password">
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-6 col-sm-offset-3">
                                    <button type="submit" name="button" tabindex="4" class="form-control btn btn-login">Sign In</button>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-6 col-sm-offset-3">
                                    <p>Don't have an account yet <a href="/user/signup">Sign up here</a></p>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

<% include ../partials/footer %>
